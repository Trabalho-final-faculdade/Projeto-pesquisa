<p id="notice"><%= notice %></p>

<h1><%= t("mining_types") %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("description") %></th>
      <th><%= t("acronym") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t("show"), mining_type, class:"btn btn-info" %></td>
        <td><%= link_to t("edit"), edit_mining_type_path(mining_type), class:"btn btn-warning" %></td>
        <td><%= link_to t("destroy"), mining_type, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_mining_type"), new_mining_type_path, class:"btn btn-primary" %>
