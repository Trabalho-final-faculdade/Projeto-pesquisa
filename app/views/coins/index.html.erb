<p id="notice"><%= notice %></p>

<h1><%= t("coins") %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("description") %></th>
      <th><%= t("acronym") %></th>
      <th><%= t("image") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "40x25" %></td>
        <td><%= link_to t("show"), coin, class:"btn btn-info" %></td>
        <td><%= link_to t("edit"), edit_coin_path(coin), class:"btn btn-warning" %></td>
        <td><%= link_to t("destroy"), coin, class:"btn btn-danger", method: :delete, data: { confirm: t("are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_coin"), new_coin_path, class:"btn btn-primary" %>
